#include <iostream>
#include <iomanip>
int main()
{
    bool flag;
    std::cout << "unesi " << true << " ili " << false << std::endl;
    std::cin >> flag;
    std::cout << std::boolalpha << flag << std::endl;
    
    int a = 106;
    std::cout << "hex " << std::hex << a << std::endl;
    std::cout << "dec " << std::dec << a << std::endl;
    std::cout << "oct " << std::oct << a << std::endl;
    
    double pi = 3.141592;
    std::cout << "pi = " << std::fixed << std::uppercase;
    std::cout << std::setprecision(7) << std::setw(13);
    std::cout << std::setfill('-');
    std::cout << pi << std::endl;
}
